<Window x:Class="CompasPack.View.AboutView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CompasPack.View"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        WindowStyle="ToolWindow"
        Title="About" Height="300" Width="450" WindowStartupLocation="CenterScreen">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>
        <WrapPanel Grid.Row="0" Grid.Column="0" Margin="4">
            <TextBlock Margin="5 0 5 0" Width="60" Text="Назва:"></TextBlock>
            <TextBlock Margin="5 0 5 0" Text="{Binding Name}"></TextBlock>
        </WrapPanel>
        <WrapPanel Grid.Row="1" Grid.Column="0" Margin="4">
            <TextBlock Margin="5 0 5 0" Width="60" Text="Версія:"></TextBlock>
            <TextBlock Margin="5 0 5 0" Text="{Binding Version}"></TextBlock>
        </WrapPanel>
        <WrapPanel Grid.Row="2" Grid.Column="0" Margin="4">
            <TextBlock Margin="5 0 5 0" Width="60" Text="Автор:"></TextBlock>
            <TextBlock Margin="5 0 5 0" Text="{Binding Autor}"></TextBlock>
        </WrapPanel>
        <WrapPanel Grid.Row="3" Grid.Column="0" Margin="4">
            <TextBlock Margin="5 0 5 0" Width="60" Text="Відомості:"></TextBlock>
            <TextBlock Margin="5 0 5 0" Text="{Binding Info}"></TextBlock>
        </WrapPanel>
        <Image Margin="5 0 0 0" HorizontalAlignment="Left" VerticalAlignment="Top"  Height="100" Width="328" Grid.Row="5" Source="/Image/Logo_2016.png"></Image>

    </Grid>
</Window>
