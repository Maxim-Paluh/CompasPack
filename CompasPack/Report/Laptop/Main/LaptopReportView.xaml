<UserControl x:Class="CompasPack.View.LaptopReportView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CompasPack.View"
             xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
             xmlns:ViewModel="clr-namespace:CompasPack.ViewModel"
             xmlns:View="clr-namespace:CompasPack.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <DataTemplate DataType="{x:Type ViewModel:LaptopMainViewModel}">
            <View:LaptopMainView/>
        </DataTemplate>
        
        <DataTemplate DataType="{x:Type ViewModel:PCCaseViewModel}">
            <View:PCCaseView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type ViewModel:CPUViewModel}">
            <View:CPUView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type ViewModel:MemoryViewModel}">
            <View:MemoryView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type ViewModel:VideoControllerViewModel}">
            <View:VideoControllerView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type ViewModel:PhysicalDiskViewModel}">
            <View:PhysicalDiskView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type ViewModel:LaptopOtherViewModel}">
            <View:LaptopOtherView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type ViewModel:MonitorDiagonalViewModel}">
            <View:MonitorDiagonalView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type ViewModel:LaptopBatteryViewModel}">
            <View:LaptopBatteryView/>
        </DataTemplate>
    </UserControl.Resources>
    
    <Border  BorderBrush="DarkBlue" Margin="2"  BorderThickness="1" CornerRadius="3">
        <Border.Background>
            <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                <GradientStop Color="AliceBlue" Offset="0.0" />
                <GradientStop Color="LightCyan" Offset="0.5" />
                <GradientStop Color="AliceBlue" Offset="1.0" />
            </LinearGradientBrush>
        </Border.Background>
        
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
            </Grid.RowDefinitions>

            <ContentControl  Grid.Row="0"  Content="{Binding LaptopMainViewModel}"/>
            <ContentControl  Grid.Row="1"  Content="{Binding MonitorDiagonalViewModel}"/>
            <ContentControl  Grid.Row="2"  Content="{Binding CPUViewModel}"/>
            <ContentControl  Grid.Row="3"  Content="{Binding MemoryViewModel}"/>
            <ContentControl  Grid.Row="4"  Content="{Binding VideoControllerViewModel}"/>
            <ContentControl  Grid.Row="5"  Content="{Binding PhysicalDiskViewModel}"/>
            <ContentControl  Grid.Row="6"  Content="{Binding LaptopBatteryViewModel}"/>
            <ContentControl  Grid.Row="7"  Content="{Binding LaptopOtherViewModel}"/>

            <Border Grid.Row="8"  BorderBrush="DarkBlue" Margin="5" BorderThickness="1" CornerRadius="3">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto"></ColumnDefinition>
                        <ColumnDefinition Width="auto"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Grid.Column="0" FontSize="14" FontWeight="Bold"  Text="SaveReportAndPrice:"></TextBlock>
                    <WrapPanel Grid.Row="0" Grid.Column="1"   Margin="4" HorizontalAlignment="Left">
                        <TextBlock MinWidth="40" Text="{Binding ReportPath, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"></TextBlock>
                        <TextBlock Text="\"></TextBlock>
                        <TextBlock Text="Report_"></TextBlock>
                        <xctk:IntegerUpDown Margin="5 0 5 0" FormatString="000" Minimum="0" Maximum="1000000" MinWidth="40" Value="{Binding IndexReport, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                        <TextBlock Text=".htm | .html | .docx"></TextBlock>
                    </WrapPanel>
                    <WrapPanel Grid.Row="0" Grid.Column="2"  Margin="4" HorizontalAlignment="Right">
                        <TextBlock FontWeight="Bold" Text="Save report: "></TextBlock>
                        <Button Margin="5 0 0 0" Content="Save" Command="{Binding SaveReportCommand}" IsEnabled="{Binding IsEnable, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" Width="50"></Button>
                        <Button Margin="5 0 0 0" Content="Open Report" Command="{Binding OpenReportCommand}" IsEnabled="{Binding IsEnable, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" Width="75"></Button>
                        <Button Margin="5 0 0 0" Content="Open Price" Command="{Binding OpenPriceCommand}" IsEnabled="{Binding IsEnable, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" Width="70"></Button>
                    </WrapPanel>
                    
                    <WrapPanel Grid.Row="1" Grid.Column="2"  Margin="4" HorizontalAlignment="Right">
                        <TextBlock FontWeight="Bold" Text="Open Folder: "></TextBlock>
                        <Button Margin="5 0 0 0" Content="Open" Command="{Binding OpenFolderCommand}" Width="50"></Button>
                    </WrapPanel>

                    <View:ProgressRing Grid.RowSpan="2" Grid.Column="2" Foreground="DarkSlateBlue" IsActive="{Binding IsActive, Mode=TwoWay}"/>
                </Grid>
            </Border>

        </Grid>
    </Border>
</UserControl>
